<tr id="company_<%= company.id %>">
	<td><%= company.name %></td>
	<td><%= link_to 'Show', company %></td>
	<td>
		<a href="#modal_company_<%= company.id %>">Edit</a>
	</td>
	<td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
</tr>

<div id="modal_company_<%= company.id %>" class="modal">
  <div class="modal-content">
    <h1>Editing Company</h1>
		<%= render 'form', company: company %>
  </div>
</div>

